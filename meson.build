project('culvert', 'c',
	default_options: [
		'buildtype=debugoptimized',
		'default_library=static',
		'warning_level=2',
		'c_std=gnu99',
		'b_lto=true',
		'b_ndebug=true',
		],
	meson_version: '>=0.63.0',
	version: 'v0.4.0')

add_global_link_arguments('-z', 'noexecstack', language: 'c')

libfdt_dep = dependency('libfdt',
			default_options: [ 'warning_level=1',
					   'python=disabled' ],
			fallback: [ 'dtc', 'libfdt_dep' ],
			required: true)

subdir('src')
